<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:elevation="6dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgViewMoviePoster"
            android:layout_width="wrap_content"
            android:src="@drawable/batman_sample"
            android:adjustViewBounds="true"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewMovieName"
            android:layout_toRightOf="@+id/imgViewMoviePoster"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewReleaseDate"
            android:layout_toRightOf="@+id/imgViewMoviePoster"
            android:layout_below="@+id/txtViewMovieName"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewMovieDesc"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/imgViewMoviePoster"
            android:layout_below="@+id/txtViewReleaseDate"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>